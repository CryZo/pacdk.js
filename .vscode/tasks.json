{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run app",
      "type": "shell",
      "group": "build",
      "command": "docker compose up --build",
      "problemMatcher": [
        {
          "owner": "vite",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^frontend-1  \\| ([\\/\\w\\d]+\\.\\w+):(\\d+):(\\d+): (ERROR|WARNING): (.+)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "(^frontend-1  \\|   VITE .+  ready in \\d+ ms$)",
            "endsPattern": "(^frontend-1  \\| .+ \\[vite\\] page reload .+$)|(^frontend-1  \\| .+ \\[vite\\] page reload .+$)|(^frontend-1  \\|   âžœ  Network: .+$)"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "showReuseMessage": false,
        "clear": true,
        "close": true
      }
    },
    {
      "label": "Terminate app",
      "command": "docker compose down",
      "type": "shell",
      "group": "none",
      "presentation": {
        "showReuseMessage": false,
        "clear": true,
        "close": true
      }
    }
  ]
}
